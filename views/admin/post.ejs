<%- partial ('../common/admin_nav.ejs') %>

<div class="col-sm-12 post-form">

  <h2 class="post-title">Bài Viết</h2>


  <form role="form" class="form-horizontal" action="/post/create" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label class="col-sm-2 control-label">Thuộc Chủ Đề</label>

      <div class="col-sm-10">
        <select class="form-control" name="threads" id="threads">
          <% _.each(allthreads, function(thread) { %>
          <option value="<%= thread.id %>"><%= thread.name %></option>
         <% }) %>
        </select>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Tiêu Đề</label>
      <div class="col-sm-10">
      <input type="text" name="title" id="inputTitle" class="form-control" placeholder="Nhập Tiêu Đề" required>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Giới Thiệu</label>
      <div class="col-sm-10">
      <textarea class="form-control" name="description" id="editor" rows="5" cols="50" placeholder="Viết lời giới thiệu cho bài viết." required></textarea>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Nội Dung Chi Tiết</label>
      <div class="col-sm-10">
      <textarea class="form-control" name="content" id="editor1" rows="5" cols="50" placeholder="Viết nội dung chi tiết cho bài viết."></textarea>
        <script type="text/javascript">
          window.onload = function() {
            CKEDITOR.replace('editor1');
            $('#create-post').attr("name", "content");
          };
        </script>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <input type="text" name="owner" id="inputOwner" class="form-control sr-only" value="<%= req.session.user.id %>">
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Hiển Thị</label>
      <div class="col-sm-10">
        <select class="form-control" name="status" id="status">
          <option value="1">Có</option>
          <option value="0">Không</option>
        </select>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Hình Ảnh</label>
      <div class="col-sm-10">
          <div class="panel panel-default">
              <div class="panel-body"><img id="thumb" style="width:200px;margin-top:10px" ></div>
              <div class="panel-footer">
                  <label class="btn btn-primary" for="my-file-selector">
                    <input id="my-file-selector" class="sr-only" type="file" name="thumbnail" class="form-control" onchange="showMyImage(this)" required/>
                    <span class="glyphicon glyphicon-folder-open"> </span> Chọn Hình
                  </label>
               </div>
          </div>
      </div>
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Gửi bài viết</button>
  </form>

  </div>

<%- partial ('../common/footer.ejs') %>
