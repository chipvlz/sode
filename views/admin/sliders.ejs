<%- partial ('../common/admin_nav.ejs') %>
<div class="container">

  <div class="col-sm-8">

    <h2>Danh Sách Sliders</h2>
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Tiêu Đề</th>
        <th>Giới Thiệu</th>
        <th>Hiển Thị</th>
        <th>Liên Kết</th>
        <th>Hình Ảnh</th>
        <th>Sửa</th>
      </tr>
      </thead>
      <tbody>
      <% _.each(sliders, function(slider) { %>
      <tr id="slider-id">
        <td class="slider-title"><a href="/admin/slider/<%= slider.id %>"><%= slider.title %></a></td>
        <td class="slider-description"><%= slider.description %></td>
        <td class="slider-status">
          <% if (slider.status == 0) { %> Không <% } else { %> Có <% } %>
        </td>
        <td class="slider-linkto"><%= slider.linkto %></td>
        <td class="slider-img"><img src="<%= slider.thumbnail %>" width="300px"></td>
        <td class="slider-edit"><a href="#"><span class="glyphicon glyphicon-pencil"></span></a></td>
      </tr>
      <% }) %>
      </tbody>
    </table>
  </div>



</div><hr>

<div class="col-sm-12 slider-form">
  <form role="form" class="form-horizontal" action="/slider/create" method="post" enctype="multipart/form-data">

    <div class="form-group">
      <label class="col-sm-2 control-label">Tiêu Đề</label>
      <div class="col-sm-10">
        <input type="text" name="title" id="inputTitle" class="form-control" placeholder="Nhập Tiêu Đề" required>
      </div>
    </div>


    <div class="form-group">
      <label class="col-sm-2 control-label">Giới Thiệu</label>
      <div class="col-sm-10">
        <textarea class="form-control" name="description" id="editor" rows="5" cols="50" placeholder="Viết lời giới thiệu cho bài viết." required></textarea>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Liên Kết</label>
      <div class="col-sm-10">
        <input type="text" name="linkto" id="inputLinkto" class="form-control" placeholder="Nhập Liên Kết">
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Thứ Tự</label>
      <div class="col-sm-10">
        <input type="text" name="sort" id="inputSort" class="form-control" placeholder="Nhập Thứ Tự">
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Hiển Thị</label>
      <div class="col-sm-10">
        <select class="form-control" name="status" id="status">
          <option value="1">Có</option>
          <option value="0">Không</option>
        </select>
      </div>
    </div>

    <div class="form-group">
    <img id="thumb" style="width:200px;margin-top:10px" src="" alt="hình đại diện"><hr>
    <label>Please upload your avatar:</label>
    <input type="file" name="thumbnail" required />
      </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Đồng Ý</button>
  </form>

</div>

