<%- partial ('../common/admin_nav.ejs') %>
<div class="col-sm-12 thread-form">
  <h2 class="thread-title">Sửa Chủ Đề <span class="badge">ID : <%= findThread.id %></span></h2>
  <div id="edit-thread-alert"></div>
  <form role="form" class="form-thread" id="edit-thread">
    <div class="form-group">
      <input type="text" name="id" class="form-control sr-only" value="<%= findThread.id %>">
      <input type="text" name="name" id="inputName" class="form-control" value="<%= findThread.name %>" placeholder="Nhập Tiêu Đề" required autofocus>
    </div>
    <div class="form-group">
      <textarea class="form-control" name="desc" id="editor" rows="5" cols="50" placeholder="Viết lời giới thiệu cho chủ đề."><%= findThread.desc %></textarea>
    </div>
    <div class="form-group">
      <input type="text" name="position" id="inputPosition" class="form-control" value="<%= findThread.position %>" placeholder="Nhập Vị Trí">
    </div>
    <div class="form-group">
      <select class="form-control" name="status" id="status">
        <% if(findThread.status==1) { %>
        <option value="1">Hiển Thị</option>
        <option value="0">Không Hiển Thị</option>
        <% } else { %>
        <option value="0">Không Hiển Thị</option>
        <option value="1">Hiển Thị</option>
        <% } %>
      </select>
    </div>

    <div class="form-group">
      <label for="inputSort" class="sr-only">Thứ Tự Sắp Xếp</label>
      <input type="text" name="sort" id="inputSort" class="form-control" value="<%= findThread.sort %>" placeholder="Nhập Số Thứ Tự" autofocus>
    </div>
    <button class="btn btn-lg btn-primary btn-block thread-submit" type="submit">Đồng Ý</button>
  </form>

  <div class="modal fade" id="threadModal" role="dialog">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Thông Báo</h4>
        </div>
        <div class="modal-body">
          <p class="notice-text"></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
        </div>
      </div>
    </div>
  </div>
</div>
<%- partial ('../common/footer.ejs') %>
