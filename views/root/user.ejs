<%- partial ('../common/root_nav.ejs') %>

<div class="container" id="page-user-manager">

  <div class="col-sm-4">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info text-center">THÔNG TIN ĐẠI LÝ</li>
      <li class="list-group-item"><i class="fa fa-user"></i> <span class="pull-right" style="font-weight:bold;"><%= name %></span></li>
      <li class="list-group-item"><i class="fa fa-phone"></i> <span class="pull-right"><%= phone %></span></li>
      <li class="list-group-item"><i class="fa fa-hourglass-3"></i> <span class="pull-right"><%= expired %></span></li>
      <li class="list-group-item"><a class="btn btn-danger" data-toggle="modal" data-target="#expiredUserModal">
          <i class="fa fa-calendar"></i> Gia hạn</a></li>
    </ul>
  </div>

  <div class="col-sm-4">

  </div>

</div>


<!--// Modal Edit User-->
<div class="modal fade" id="expiredUserModal" role="dialog">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><i class="fa fa-pencil-square-o"></i> GIA HẠN ĐẠI LÝ</h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal" id="expired-user-form">
          <div class="form-group">
            <label class="control-label col-sm-3" for="expired">Nhập ngày</label>
            <div class="col-sm-9">
              <input class="sr-only" name="phone" value="<%= phone %>">
              <input type="text" class="form-control" name="expired" id="expired" value="<%= expired %>">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i> Sửa</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
